var new_word : string := ""
var word : string
var number : int

put "Enter a word. " ..
get word

for i : 1 .. length(word) div 2
  if word(i) >="a" and <="z" then
  number := ord(word(i)) - ord("a") + ord("A")
  new_word += chr(number)
  else
    new_word += word(i)
  end if
end for

for a : length(word) div 2 + 1 .. length(word)
  new_word += word(a)
end for

put new_word, "."
